<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name ,"ユーザー名" %>
      <%= f.text_field :name %>

      <%= f.label :email , "メールアドレス" %>
      <%= f.text_field :email %>
      
      <%= f.label :password , "パスワード" %>
      <%= f.text_field :password %>
      
      <%= f.label :password_confirmation, "パスワード(確認)" %>
      <%= f.text_field :password_confirmation %>
      
      <%= f.submit %>
    <% end %>
  </div>
</div>